<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/schedule_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/schedule_item_margin"
        android:textStyle="bold"
        android:textSize="17sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="20">

        <TextView
            android:id="@+id/schedule_item_teacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:drawableLeft="@drawable/more_ic_teacher_24dp"
            android:drawableStart="@drawable/more_ic_teacher_24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/schedule_item_class_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:drawableLeft="@drawable/more_ic_place_24dp"
            android:drawableStart="@drawable/more_ic_place_24dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>